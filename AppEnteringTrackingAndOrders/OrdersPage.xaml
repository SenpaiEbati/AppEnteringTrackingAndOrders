<Page x:Class="AppEnteringTrackingAndOrders.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppEnteringTrackingAndOrders"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1920"
      Title="OrdersPage">

    <Grid x:Name="BackgroundGrid" Style="{DynamicResource BackgroundGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="BackListTableWaitersButton"
                Style="{DynamicResource ButtonStyleFull}"
                Height="80" Width="150"
                Content="Назад"
                Click="BackListTableWaitersButton_Click"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" FontSize="24" Margin="15"/>

            <Border Height="80" Width="650" Style="{DynamicResource BorderGray}" CornerRadius="15">
                <TextBlock x:Name="TopBorderText" FontSize="24" Margin="10,5,10,5" Foreground="White"/>
            </Border>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="OrderPanelInfoGrid" Grid.Column="0">
                <ScrollViewer x:Name="OrderPanelInfoScrollViewer" 
                              VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled" Margin="15,85,15,85">
                    <WrapPanel x:Name="OrderPanelInfoWrapPanel" Width="600">
                        <Button x:Name="ButtonOrdersSumWrapPanel" Style="{DynamicResource ButtonStyleNo}" Height="80" VerticalAlignment="Center" Width="600"/>
                    </WrapPanel>
                </ScrollViewer>
                <Button
                    Style="{DynamicResource ButtonStyleFull}"
                    Height="80" Width="200" FontSize="24" Margin="15,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Image Source="./buttonleft.png" RenderTransformOrigin="0.5,0.5" Height="50" Width="50">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button
                    Style="{DynamicResource ButtonStyleFull}"
                    Height="80" Width="200" FontSize="24" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <Image Source="./buttonleft.png" RenderTransformOrigin="0.5,0.5" Height="50" Width="50">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="270"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>
                <Button x:Name="OrderPanelInfoAddGuestButton"
                    Style="{DynamicResource ButtonStyleFull}"
                    Height="80" Width="200" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                <Button
                    Style="{DynamicResource ButtonStyleTopLeft}" FontSize="24" Margin="15,0,0,0" 
                    HorizontalAlignment="Left" Width="200" Height="80" VerticalAlignment="Top">
                    <Image Source="./buttonleft.png" Height="50" Width="50"></Image>
                </Button>
                <Button
                    Style="{DynamicResource ButtonStyleNo}" FontSize="24" 
                    HorizontalAlignment="Center" Width="200" Height="80" VerticalAlignment="Top" Content="Все гости"/>
                <Button
                    Style="{DynamicResource ButtonStyleTopRight}" FontSize="24" Margin="0,0,15,0"
                    HorizontalAlignment="Right" Width="200" Height="80" VerticalAlignment="Top">
                    <Image Source="./buttonleft.png" Height="50" Width="50" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="180"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Button>
            </Grid>
            <Grid x:Name="MenuButtonsGrid" Grid.Column="1">
                <Border x:Name="MenuBorder" Style="{DynamicResource BorderGray}" Height="80" CornerRadius="15,15,0,0" VerticalAlignment="Top" Margin="0,0,15,0">
                    <TextBlock FontSize="24" Foreground="White" Text="Меню" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <ScrollViewer x:Name="MenuButtonsScrollViewer" 
                              VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled" Margin="0,85,15,0">
                    <WrapPanel x:Name="MenuButtonsWrapPanel">
                        <Button x:Name="MenuButtonsWrapPanelAddPositionButton" Height="175" Width="175" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="MenuButtonsWrapPanelAddPositionButton_Click"/>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Column="2">
                <Border x:Name="MenuModifierBorder" Style="{DynamicResource BorderGray}" Height="80" CornerRadius="15,15,0,0" VerticalAlignment="Top" Margin="0,0,15,0"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button
                Style="{DynamicResource ButtonStyleFull}"
                Height="80" Width="600" FontSize="24" Margin="15" Background="#FF3FBB5E" HorizontalAlignment="Left"/>
            <Button
                Style="{DynamicResource ButtonStyleFull}"
                Height="80" Width="600" FontSize="24" Margin="15" Content="Сохранить заказ" HorizontalAlignment="Right" Foreground="#FF47E86F"/>
        </Grid>
    </Grid>
</Page>
