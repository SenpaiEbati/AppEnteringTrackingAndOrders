<Page x:Class="AppEnteringTrackingAndOrders.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppEnteringTrackingAndOrders"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1800"
      Title="OrdersPage">

    <Grid x:Name="BackgroundGrid" Style="{DynamicResource BackgroundGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="213*"/>
                <ColumnDefinition Width="632*"/>
                <ColumnDefinition Width="689*"/>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="133*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button x:Name="BackListTableWaitersButton"
                    Style="{DynamicResource ButtonStyleFull}"
                    Height="80"
                    Content="Назад"
                    Click="BackListTableWaitersButton_Click" 
                    VerticalAlignment="Center" FontSize="24" Margin="15,0,15,0"/>
            </Grid>
            <Grid Grid.Column="1">
                <Border Height="80" Style="{DynamicResource BorderGray}" CornerRadius="15" Margin="0,5,10,5">
                    <TextBlock x:Name="TopBorderText" FontSize="24" Margin="10,5,10,5" Foreground="White"/>
                </Border>
            </Grid>
            <Grid Grid.Column="2">
                <Border Height="80" Style="{DynamicResource BorderGray}" CornerRadius="15" Margin="0,5,0,5">
                    <TextBlock Text="По официантам"  FontSize="24" Margin="10,5,10,5" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
            <Grid Grid.Column="3">
                <Border Height="80" Style="{DynamicResource BorderGray}" CornerRadius="15" Margin="10,5,5,5">
                    <Image Source="/search.png" Margin="20,14,20,14" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
                </Border>
            </Grid>

            <Grid Grid.Column="4">
                <Border Height="80" Style="{DynamicResource BorderGray}" CornerRadius="15" Margin="5,5,10,5">
                    <Image Margin="20,14,20,14" HorizontalAlignment="Center" VerticalAlignment="Center" Source="/icons8.png"/>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="OrderPanelInfoGrid" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <ScrollViewer x:Name="OrderPanelInfoScrollViewer" 
                                  HorizontalScrollBarVisibility="Disabled" Margin="10,10,10,0" >
                        <StackPanel x:Name="OrderPanelInfoWrapPanel" Orientation="Vertical">
                            <Border x:Name="OrderPanelInfoWrapPanelBorderSum" HorizontalAlignment="Stretch" Height="80" Style="{DynamicResource BorderGray}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- "Оплата" -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Гибкое пространство -->
                                        <ColumnDefinition Width="Auto"/>
                                        <!-- Сумма + валюта -->
                                    </Grid.ColumnDefinitions>

                                    <!-- Левый текст -->
                                    <TextBlock Grid.Column="0" Text="Оплата" Margin="10,0,0,0" FontSize="24" Foreground="White" VerticalAlignment="Center"/>

                                    <!-- Правая группа (сумма + руб.) -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                                        <TextBlock x:Name="ButtonOrderSum" Text="0" FontSize="24" Foreground="White"/>
                                        <TextBlock Text=" руб." FontSize="24" Foreground="White" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button Style="{DynamicResource ButtonStyleFull}" FontSize="24" Margin="10,6,5,0" Height="74" VerticalAlignment="Top">
                            <Image Source="./buttonleftwhite.png" RenderTransformOrigin="0.5,0.5" Height="50" Width="50">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="90"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button Style="{DynamicResource ButtonStyleFull}"
                            Height="74" FontSize="24" VerticalAlignment="Top" Margin="8,6,8,0">
                            <Image Source="./buttonleftwhite.png" RenderTransformOrigin="0.5,0.5" Height="50" Width="50">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="270"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Button x:Name="OrderPanelInfoAddGuestButton" Style="{DynamicResource ButtonStyleFull}"
                            Height="74" FontSize="24" Content="➕ Гость" VerticalAlignment="Top" Margin="5,6,10,0"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Button Style="{DynamicResource ButtonStyleTopLeft}" FontSize="24" Margin="15,0,0,0" Height="74" VerticalAlignment="Center">
                            <Image Source="./buttonleftwhite.png" Height="50" Width="50"></Image>
                        </Button>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Button Style="{DynamicResource ButtonStyleNo}" FontSize="24" Height="74" VerticalAlignment="Center" Content="Все гости" Margin="8,0,8,0"/>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Button Style="{DynamicResource ButtonStyleTopRight}" FontSize="24" Height="74" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Image Source="./buttonleftwhite.png" Height="50" Width="50" RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
            <Grid x:Name="GroupMenuButtonsGrid" Grid.Column="1">
                <Border x:Name="GroupMenuBorder" Style="{DynamicResource BorderGray}" Height="80" CornerRadius="15,15,0,0" VerticalAlignment="Top" Margin="0,0,14,0">
                    <TextBlock x:Name="GroupMenuBorderText" FontSize="24" Foreground="White" Text="Меню" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <ScrollViewer x:Name="GroupMenuButtonsScrollViewer"
                              HorizontalScrollBarVisibility="Disabled" Margin="0,85,0,0" Visibility="Visible">
                    <WrapPanel x:Name="GroupMenuButtonsWrapPanel">
                        <Button x:Name="GroupMenuButtonsWrapPanelAddPositionButton" Content="➕ Добавить&#x0a;     группу&#x0a;    позиций" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="GroupMenuButtonsWrapPanelAddPositionButton_Click"/>
                    </WrapPanel>
                </ScrollViewer>
                <ScrollViewer x:Name="ModifierMenuButtonsScrollViewer" 
                              VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled" Margin="0,85,0,0" Visibility="Hidden">
                    <WrapPanel x:Name="ModifierMenuButtonsWrapPanel">
                        <Button x:Name="ModifierMenuButtonsWrapPanel_ModifierButton" Content="Модификатор" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="ModifierMenuButtonsWrapPanel_ModifierButton_Click" Focusable="False"/>
                        <Button x:Name="ModifierMenuButtonsWrapPanel_QuantityButton" Content="Количество" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="ModifierMenuButtonsWrapPanel_QuantityButton_Click" Focusable="False"/>
                        <Button x:Name="ModifierMenuButtonsWrapPanel_DeleteButton" Content="Удалить" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="ModifierMenuButtonsWrapPanel_DeleteButton_Click" Focusable="False"/>
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
            <Grid x:Name="ItemMenuButtonsGrid" Grid.Column="2">
                <Border x:Name="ItemMenuBorder" Style="{DynamicResource BorderGray}" Height="82" CornerRadius="15,15,0,0" VerticalAlignment="Top" Margin="0,-1,15,0">
                    <TextBlock x:Name="ItemMenuBorderTextBlock" Text="Выберите группу меню" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                </Border>
                <ScrollViewer x:Name="ItemMenuButtonsScrollViewer" 
                              HorizontalScrollBarVisibility="Disabled" Margin="0,85,0,0" Visibility="Hidden">
                    <WrapPanel x:Name="ItemMenuButtonsWrapPanel">
                        <Button x:Name="ItemMenuButtonsWrapPanelAddPositionButton" Content="➕ Добавить&#x0a;    позицию" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="ItemMenuButtonsWrapPanelAddPositionButton_Click"/>
                    </WrapPanel>
                </ScrollViewer>
                <ScrollViewer x:Name="ItemModifierButtonsScrollViewer" 
                              VerticalScrollBarVisibility="Hidden" 
                              HorizontalScrollBarVisibility="Disabled" Margin="0,85,0,0" Visibility="Hidden" Focusable="False">
                    <WrapPanel x:Name="ItemModifierButtonsWrapPanel" Focusable="False">
                        <Button x:Name="ItemModifierButtonsWrapPanelAddPositionButton" Content="➕ Добавить&#x0a;модификатор" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Click="ItemModifierButtonsWrapPanelAddPositionButton_Click" Focusable="False"/>
                        <!--<Button Content="Помидоры" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Focusable="False"/>
                        <Button Content="Лук" Height="175" Width="200" Margin="0,0,10,10" Style="{DynamicResource ButtonStyleNo}" FontSize="24" Foreground="White" Focusable="False"/>-->
                    </WrapPanel>
                </ScrollViewer>
                <Grid x:Name="ItemQuantityButton" Margin="0,85,0,0" Visibility="Hidden">
                    <Border Style="{DynamicResource BorderGray}" Margin="0,0,16,0" Height="220" VerticalAlignment="Top">
                        <materialDesign:NumericUpDown x:Name="ItemQuantityNumericUpDown" Padding="30" FontSize="72" Foreground="White" Minimum="0" Margin="0,0,0,30" Maximum="100" Focusable="False" ForceCursor="True" />
                    </Border>
                    <Grid x:Name="KeyboardNumber" Visibility="Visible" Margin="0,225,16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Grid.Column="1">
                            <Button x:Name="ButtonTwo" Content="2" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Click="TopMiddleButtonTwo_Click" Focusable="False" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="2">
                            <Button x:Name="ButtonThree" Content="3" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Click="TopRightButtonThree_Click" Focusable="False" Margin="2,2,2,2" />
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Button x:Name="ButtonOne" Content="1" Style="{DynamicResource ButtonStyleNo}"  FontSize="36" Click="TopLeftButtonOne_Click" Focusable="False" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Button x:Name="ButtonFive" Content="5" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Click="CenterMiddleButtonFive_Click" Focusable="False" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0">
                            <Button x:Name="ButtonFour" Content="4" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Click="CenterLeftButtonFour_Click" Focusable="False" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="2">
                            <Button x:Name="ButtonSix" Content="6" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Click="CenterRightButtonSix_Click" Focusable="False" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <Button x:Name="ButtonEight" Content="8" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Focusable="False" Click="DownMiddleButtonEight_Click" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="0">
                            <Button x:Name="ButtonSeven" Content="7" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Focusable="False" Click="DownLeftButtonSeven_Click" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="2">
                            <Button x:Name="ButtonNine" Content="9" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Focusable="False" Click="DownRightButtonNine_Click" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Button x:Name="ButtonDelete" Content="Del" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Focusable="False" Click="TopButtonDelete_Click" Background="#FFCE4848" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="0">
                            <Button x:Name="ButtonZero" Content="0" Style="{DynamicResource ButtonStyleNo}" FontSize="36"  Focusable="False" Click="DownButtonZero_Click" Margin="2,2,2,2"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="2" >
                            <Button x:Name="ButtonEnter" Content="Enter" Style="{DynamicResource ButtonStyleNo}" FontSize="36" Focusable="False" Click="ButtonEnter_Click" Background="#FF3FBB5E" Margin="2,2,2,2"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button x:Name="ButtonPaymentOrder" Height="80" FontSize="24" Style="{DynamicResource ButtonStyleFull}" Margin="10,15,10,15" Background="#FF3FBB5E" Padding="0" HorizontalContentAlignment="Stretch">
                    <Grid>
                        <!-- Левый элемент (фиксирован у левого края) -->
                        <TextBlock Text="Оплата" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" Foreground="White"/>
                        <!-- Правый элемент (фиксирован у правого края) -->
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0">
                            <TextBlock x:Name="ButtonPaymentOrderSum" Text="0" FontSize="24" Foreground="White"/>
                            <TextBlock Text=" руб." FontSize="24" Foreground="White" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>
            <Grid Grid.Column="2">
                <Button
                    Style="{DynamicResource ButtonStyleFull}"
                    Height="80" FontSize="24" Margin="7,15,15,15" Content="Сохранить заказ" Foreground="#FF47E86F" Click="SaveOrder_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
