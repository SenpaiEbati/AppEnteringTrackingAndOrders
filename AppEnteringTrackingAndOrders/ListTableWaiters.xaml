<Page x:Class="AppEnteringTrackingAndOrders.ListTableWaiters"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppEnteringTrackingAndOrders"
      mc:Ignorable="d" 
      d:DesignHeight="1200" d:DesignWidth="1920"
      Title="ListTableWaiters">
    
    <Grid x:Name="BackgroundGrid" Style="{DynamicResource BackgroundGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Border x:Name="BorderButtonLeftTopMenu" Height="80" Width="130" HorizontalAlignment="Left" 
                    VerticalAlignment="Center" CornerRadius="15,0,0,15" Margin="10,10,10,10"
                    Style="{DynamicResource BorderGray}">
                <Button x:Name="ButtonLeftTopMenu" Height="80" Width="130" Canvas.Left="10" 
                    Canvas.Top="25" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="ButtonLeftTopMenu_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/buttonleft.png" Stretch="Uniform" Viewbox="0,-0.5,1,2"/>
                    </Button.Background>
                </Button>
            </Border>
            <Border x:Name="BorderCenterTopMenu" Height="80" Width="475" HorizontalAlignment="Left" 
                    VerticalAlignment="Center" Margin="0,10,10,10"
                    Style="{DynamicResource BorderGray}">
                <TextBlock x:Name="TextBlockBorderCenterTopMenu" Text="Все официанты"  FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Border>
            <Border x:Name="BorderButtonRightTopMenu" Height="80" HorizontalAlignment="Left" 
                    VerticalAlignment="Center" Margin="0,10,10,10" CornerRadius="0,15,15,0"
                    Style="{DynamicResource BorderGray}">
                <Button x:Name="ButtonRightTopMenu" Height="80" Width="130"
                        HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="{x:Null}" Foreground="{x:Null}" 
                        Click="ButtonRightTopMenu_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/buttonleft.png" Stretch="Uniform" Viewbox="0,-0.5,1,2" Viewport="1,0,1,1" TileMode="FlipXY"/>
                    </Button.Background>
                </Button>
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <ScrollViewer Grid.Row="1" x:Name="myScrollViewer"
                      VerticalScrollBarVisibility="Hidden" 
                      HorizontalScrollBarVisibility="Disabled" PanningMode="Both" Margin="10" Height="1000">
                <WrapPanel Grid.Row="1" x:Name="WrapPanelOrders" 
                       Orientation="Horizontal" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}">
                    <Button Height="175" Width="175" Style="{DynamicResource ButtonStyleFull}" Margin="0,0,10,10" Click="AddButtonsToWrapPanel"/>
                    <Button Height="175" Width="175" Style="{DynamicResource ButtonStyleFull}" Margin="0,0,10,10" Click="AddButtonsToWrapPanel"/>
                </WrapPanel>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBox Margin="10" Grid.Row="1" AcceptsReturn="True" Text="Пример текста" Background="Azure"/>
        </StackPanel>
    </Grid>
</Page>
